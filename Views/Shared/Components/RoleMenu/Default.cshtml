@* Modern, clear, and accessible navigation bar with role-based menu and login/logout *@
@model dynamic
@{
    var isSignedIn = (bool)ViewBag.IsSignedIn;
}
<nav class="navbar navbar-expand-lg navbar-dark mining-navbar shadow-sm py-2 border-bottom" style="background: linear-gradient(90deg, #1b263b 60%, #415a77 100%); position: relative; z-index: 100;">
    <div class="container-fluid px-4">
        <a class="navbar-brand d-flex align-items-center gap-2" href="/">
            <span class="mining-icon d-flex align-items-center justify-content-center rounded-circle bg-warning bg-opacity-75 me-2" style="width: 2.5rem; height: 2.5rem;">
                <i class="bi bi-truck-front-fill text-dark fs-4"></i>
            </span>
            <span class="brand-text">
                <span class="brand-main fw-bold">PT Nikel Nusantara Mining</span><br />
                <span class="brand-sub">Sistem Reservasi Kendaraan</span>
            </span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center gap-lg-1 gap-2">
                @if (isSignedIn)
                {
                    if (User.IsInRole("Admin") || User.IsInRole("Approver") || User.IsInRole("User"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door-fill me-1"></i> Beranda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-1"></i> Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reservation" ? "active" : "")" asp-controller="Reservation" asp-action="Index"><i class="bi bi-calendar-check-fill me-1"></i> Reservasi</a>
                        </li>
                    }
                    if (User.IsInRole("Approver") || User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Approval" ? "active" : "")" asp-controller="Approval" asp-action="Index"><i class="bi bi-clipboard-check-fill me-1"></i> Persetujuan</a>
                        </li>
                    }
                    if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Report" ? "active" : "")" asp-controller="Report" asp-action="Index"><i class="bi bi-bar-chart-fill me-1"></i> Laporan</a>
                        </li>
                    }
                    <li class="nav-item dropdown ms-lg-3">
                        <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle fs-5"></i>
                            <span class="d-none d-lg-inline">@User.Identity?.Name</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i> Logout</a></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item ms-lg-3">
                        <a class="nav-link" asp-controller="Account" asp-action="Login"><i class="bi bi-box-arrow-in-right me-1"></i> Login</a>
                    </li>
                }
            </ul>
            <div class="d-none d-lg-flex align-items-center ms-3">
                @await Html.PartialAsync("~/Views/Shared/_LoginPartial.cshtml")
            </div>
        </div>
    </div>
    <div class="mining-navbar-gradient"></div>
</nav>
<style>
.mining-navbar {
    background: transparent;
    box-shadow: 0 2px 12px rgba(27,38,59,0.08);
    border-bottom: 2.5px solid #ffe066;
    position: relative;
}
.mining-navbar-gradient {
    position: absolute;
    left: 0; right: 0; bottom: 0;
    height: 6px;
    background: linear-gradient(90deg, #ffe066 0%, #ffd166 100%);
    opacity: 0.7;
    z-index: 2;
}
.mining-icon {
    width: 2.5rem; height: 2.5rem;
    display: flex; align-items: center; justify-content: center;
    background: #ffe066;
    box-shadow: 0 2px 8px rgba(255,224,102,0.15);
}
.brand-text {
    display: flex;
    flex-direction: column;
    line-height: 1.1;
}
.brand-main {
    font-size: 1.18rem;
    color: #fff;
    letter-spacing: 0.5px;
}
.brand-sub {
    color: #e0e1dd;
    font-size: 0.85rem;
    letter-spacing: 0.5px;
}
.navbar-nav .nav-link {
    font-size: 1.08rem;
    font-weight: 500;
    color: #fff !important;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    transition: background 0.2s, color 0.2s;
}
.navbar-nav .nav-link.active, .navbar-nav .nav-link:hover {
    background: #ffe066;
    color: #1b263b !important;
}
.navbar-nav .dropdown-menu {
    min-width: 10rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 16px rgba(0,0,0,0.08);
}
.navbar-nav .dropdown-item {
    font-size: 1rem;
    font-weight: 500;
}
</style>

