<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PT Nikel Nusantara Mining - Sistem Reservasi Kendaraan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark mining-navbar fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-gem me-2 fs-4 text-warning"></i>
                    <div class="brand-text">
                        <div class="brand-main">PT Nikel Nusantara Mining</div>
                        <div class="brand-sub">Sistem Reservasi Kendaraan</div>
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Beranda
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">
                                <i class="bi bi-speedometer2 me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Reservation" asp-action="Index">
                                <i class="bi bi-calendar-check me-1"></i>Reservasi
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Approval" asp-action="Index">
                                <i class="bi bi-check-circle me-1"></i>Persetujuan
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Report" asp-action="Index">
                                <i class="bi bi-graph-up me-1"></i>Laporan
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>    <div class="main-content">
        <main role="main" class="container-fluid pb-5">
            @RenderBody()
        </main>
    </div>
    <footer class="mining-footer text-white">
        <div class="container-fluid">
            <div class="row g-4">
                <div class="col-lg-6">
                    <div class="company-info">
                        <i class="bi bi-gem me-2 text-warning fs-4"></i>
                        <span class="company-name">&copy; 2025 PT Nikel Nusantara Mining</span>
                    </div>
                    <p class="mb-0 text-muted">
                        <i class="bi bi-buildings me-1"></i> Kantor Pusat: Jakarta 
                        <i class="bi bi-building ms-2 me-1"></i> Kantor Cabang: Surabaya 
                        <i class="bi bi-geo-alt ms-2 me-1"></i> 6 Lokasi Tambang di Seluruh Indonesia
                    </p>
                    
                    <div class="footer-links">
                        <a href="#"><i class="bi bi-shield-check"></i>Kebijakan Privasi</a>
                        <a href="#"><i class="bi bi-file-earmark-text"></i>Syarat & Ketentuan</a>
                        <a href="#"><i class="bi bi-question-circle"></i>Bantuan</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h6 class="mb-3 text-warning">Kontak</h6>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-telephone-fill me-2"></i>
                        <span class="text-muted">+62 21 5555 8888</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-envelope-fill me-2"></i>
                        <span class="text-muted">contact@nikelnusantara.co.id</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-globe me-2"></i>
                        <span class="text-muted">www.nikelnusantara.co.id</span>
                    </div>
                </div>                <div class="col-lg-3 col-md-6 text-end">
                    <div class="d-flex align-items-center justify-content-end mb-3 social-icons">
                        <a href="#" title="Facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" title="Twitter"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" title="LinkedIn"><i class="bi bi-linkedin"></i></a>
                        <a href="#" title="Instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" title="YouTube"><i class="bi bi-youtube"></i></a>
                    </div>
                    <div class="version-info">
                        <small><i class="bi bi-code-slash me-1"></i>v1.0.0 | .NET 9.0</small>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
