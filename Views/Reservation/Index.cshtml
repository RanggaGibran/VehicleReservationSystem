@model IEnumerable<VehicleReservationSystem.Models.Reservation>

@{
    ViewData["Title"] = "Reservations";
}

<h1>Vehicle Reservations</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Reservation</a>
</p>

<div class="card">
    <div class="card-header">
        <h5>Reservation List</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Requester</th>
                        <th>Vehicle</th>
                        <th>Driver</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Destination</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Requester.FullName</td>
                            <td>@item.Vehicle.Brand @item.Vehicle.Model (@item.Vehicle.RegistrationNumber)</td>
                            <td>@(item.Driver?.Name ?? "Not Assigned")</td>
                            <td>@item.StartDate.ToString("dd MMM yyyy HH:mm")</td>
                            <td>@item.EndDate.ToString("dd MMM yyyy HH:mm")</td>
                            <td>@item.Destination</td>
                            <td>
                                <span class="badge @(item.Status == "Approved" ? "bg-success" : 
                                                  item.Status == "Pending" ? "bg-warning" : 
                                                  item.Status == "Rejected" ? "bg-danger" : 
                                                  item.Status == "Completed" ? "bg-info" : "bg-secondary")">
                                    @item.Status
                                </span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>