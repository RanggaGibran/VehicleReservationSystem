@model VehicleReservationSystem.ViewModels.ReservationViewModel

@{
    ViewData["Title"] = "Buat Reservasi Baru";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-1">
            <i class="bi bi-plus-circle text-primary me-2"></i>Buat Reservasi Kendaraan
        </h1>
        <p class="text-muted mb-0">
            <i class="bi bi-info-circle me-1"></i>Isi formulir di bawah untuk membuat reservasi kendaraan operasional
        </p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Kembali ke Daftar
        </a>
    </div>
</div>

<!-- Progress Steps -->
<div class="card mb-4 modern-card">
    <div class="card-body py-4">
        <div class="progress-steps">
            <div class="row text-center position-relative">
                <div class="col-3">
                    <div class="step-circle active" id="stepCircle1">
                        <i class="bi bi-person-fill"></i>
                    </div>
                    <small class="text-muted d-block mt-3 fw-medium">Informasi Pemohon</small>
                </div>
                <div class="col-3">
                    <div class="step-circle" id="stepCircle2">
                        <i class="bi bi-truck"></i>
                    </div>
                    <small class="text-muted d-block mt-3 fw-medium">Pilih Kendaraan</small>
                </div>
                <div class="col-3">
                    <div class="step-circle" id="stepCircle3">
                        <i class="bi bi-calendar-event"></i>
                    </div>
                    <small class="text-muted d-block mt-3 fw-medium">Jadwal & Tujuan</small>
                </div>
                <div class="col-3">
                    <div class="step-circle" id="stepCircle4">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <small class="text-muted d-block mt-3 fw-medium">Persetujuan</small>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card modern-card">
    <div class="card-header bg-gradient-primary text-white">
        <h5 class="mb-0">
            <i class="bi bi-clipboard-data me-2"></i>Detail Reservasi
        </h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" id="reservationForm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
            
            <!-- Step 1: Requester Information -->
            <div class="form-step active" id="step1">
                <h6 class="text-primary mb-3">
                    <i class="bi bi-person-badge me-2"></i>Informasi Pemohon
                </h6>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="RequesterId" class="form-label fw-medium">
                                <i class="bi bi-person text-muted me-1"></i>Pemohon <span class="text-danger">*</span>
                            </label>
                            <select asp-for="RequesterId" asp-items="Model.Users" class="form-select form-select-modern">
                                <option value="">-- Pilih Pemohon --</option>
                            </select>
                            <span asp-validation-for="RequesterId" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="NumberOfPassengers" class="form-label fw-medium">
                                <i class="bi bi-people text-muted me-1"></i>Jumlah Penumpang <span class="text-danger">*</span>
                            </label>
                            <input asp-for="NumberOfPassengers" class="form-control form-control-modern" placeholder="Masukkan jumlah penumpang" />
                            <span asp-validation-for="NumberOfPassengers" class="text-danger small"></span>
                            <small class="text-muted">Termasuk pengemudi</small>
                        </div>
                    </div>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Purpose" class="form-label fw-medium">
                        <i class="bi bi-clipboard-check text-muted me-1"></i>Tujuan Penggunaan <span class="text-danger">*</span>
                    </label>
                    <select asp-for="Purpose" class="form-select form-select-modern" onchange="handlePurposeChange()">
                        <option value="">-- Pilih Tujuan --</option>
                        <option value="Inspeksi Tambang">Inspeksi Tambang</option>
                        <option value="Transportasi Karyawan">Transportasi Karyawan</option>
                        <option value="Pengiriman Material">Pengiriman Material</option>
                        <option value="Kunjungan Klien">Kunjungan Klien</option>
                        <option value="Rapat Eksternal">Rapat Eksternal</option>
                        <option value="Pengambilan Sample">Pengambilan Sample</option>
                        <option value="Lainnya">Lainnya</option>
                    </select>
                    <span asp-validation-for="Purpose" class="text-danger small"></span>
                </div>
                
                <div class="form-group mb-4" id="customPurposeDiv" style="display: none;">
                    <label class="form-label fw-medium">
                        <i class="bi bi-pencil text-muted me-1"></i>Jelaskan Tujuan Lainnya
                    </label>
                    <input type="text" class="form-control form-control-modern" id="customPurpose" placeholder="Jelaskan tujuan penggunaan kendaraan" />
                </div>
                
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-primary" onclick="nextStep(2)">
                        Selanjutnya <i class="bi bi-arrow-right ms-1"></i>
                    </button>
                </div>
            </div>            <!-- Step 2: Vehicle Selection -->
            <div class="form-step" id="step2">
                <h6 class="text-primary mb-3">
                    <i class="bi bi-truck me-2"></i>Pilih Kendaraan & Pengemudi
                </h6>
                
                <div class="row">                    <!-- Vehicle Selection - Enhanced -->
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            <label asp-for="VehicleId" class="form-label fw-medium">
                                <i class="bi bi-truck text-muted me-1"></i>Pilih Kendaraan <span class="text-danger">*</span>
                            </label>
                            <select asp-for="VehicleId" asp-items="Model.Vehicles" class="form-select form-select-modern" onchange="showVehiclePreview(this)">
                                <option value="">-- Pilih Kendaraan Terbaik untuk Kebutuhan Anda --</option>
                            </select>
                            <span asp-validation-for="VehicleId" class="text-danger small d-none" id="vehicleError"></span>
                            
                            <!-- Enhanced Vehicle Preview -->
                            <div class="vehicle-preview mt-3 d-none" id="vehiclePreview">
                                <div class="card border-success shadow-sm">
                                    <div class="card-body p-3">
                                        <div class="d-flex align-items-center">
                                            <div class="vehicle-icon-large me-3" id="vehicleIconPreview">
                                                <i class="bi bi-truck text-success fs-1"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1 text-success d-flex align-items-center" id="vehicleNamePreview">
                                                    Kendaraan Terpilih
                                                    <span class="badge bg-success ms-2 fs-6">
                                                        <i class="bi bi-check-circle me-1"></i>Tersedia
                                                    </span>
                                                </h6>
                                                <small class="text-muted d-block" id="vehicleDetailsPreview">Detail kendaraan</small>
                                                <div class="mt-2">
                                                    <small class="text-primary">
                                                        <i class="bi bi-people-fill me-1"></i>
                                                        <span id="vehicleCapacity">Kapasitas</span> |
                                                        <i class="bi bi-fuel-pump-fill me-1"></i>
                                                        <span id="vehicleFuelType">Bahan bakar</span>
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                      <!-- Driver Selection - Enhanced -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label fw-medium">
                                <i class="bi bi-person-gear text-muted me-1"></i>Pilih Pengemudi
                            </label>
                            
                            <!-- Enhanced Driver Options -->
                            <div class="driver-options">
                                <!-- No Driver Option (Default) - Enhanced -->
                                <div class="form-check mb-2 p-3 rounded driver-option-card active-option" id="noDriverCard">
                                    <input class="form-check-input" type="radio" name="driverChoice" id="noDriverChoice" value="no-driver" checked onclick="selectDriverOption('no-driver')">
                                    <label class="form-check-label w-100" for="noDriverChoice">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-clock text-primary me-2 fs-5"></i>
                                            <div class="flex-grow-1">
                                                <strong class="text-primary">Tentukan nanti</strong>
                                                <br><small class="text-muted">Admin akan menentukan pengemudi setelah disetujui</small>
                                                <div class="mt-1">
                                                    <span class="badge bg-primary bg-opacity-10 text-primary">
                                                        <i class="bi bi-check-circle me-1"></i>Direkomendasikan
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </label>
                                </div>
                                
                                <!-- Specific Driver Option - Enhanced -->
                                <div class="form-check mb-2 p-3 rounded driver-option-card" id="specificDriverCard">
                                    <input class="form-check-input" type="radio" name="driverChoice" id="specificDriverChoice" value="specific" onclick="selectDriverOption('specific')">
                                    <label class="form-check-label w-100" for="specificDriverChoice">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-person-check text-muted me-2 fs-5"></i>
                                            <div class="flex-grow-1">
                                                <strong>Pilih pengemudi tertentu</strong>
                                                <br><small class="text-muted">Pilih pengemudi yang diinginkan untuk perjalanan ini</small>
                                            </div>
                                        </div>
                                    </label>
                                </div>
                            </div>
                            
                            <!-- Enhanced Driver Selection Dropdown -->
                            <div class="driver-select-container mt-3 d-none" id="driverSelectContainer">
                                <div class="card bg-light border-info">
                                    <div class="card-body p-3">
                                        <label class="form-label fw-medium">
                                            <i class="bi bi-person-badge text-info me-1"></i>Pilih Pengemudi
                                        </label>
                                        <select asp-for="DriverId" asp-items="Model.Drivers" class="form-select form-select-modern">
                                            <option value="">-- Pilih Pengemudi yang Tersedia --</option>
                                        </select>
                                        <span asp-validation-for="DriverId" class="text-danger small"></span>
                                        <small class="text-info mt-1 d-block">
                                            <i class="bi bi-info-circle me-1"></i>Hanya pengemudi yang tersedia akan ditampilkan
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-secondary" onclick="previousStep(1)">
                        <i class="bi bi-arrow-left me-1"></i>Sebelumnya
                    </button>
                    <button type="button" class="btn btn-primary" onclick="nextStep(3)">
                        Selanjutnya <i class="bi bi-arrow-right ms-1"></i>
                    </button>
                </div>
            </div>
            
            <!-- Step 3: Schedule & Destination -->
            <div class="form-step" id="step3">
                <h6 class="text-primary mb-3">
                    <i class="bi bi-calendar-event me-2"></i>Jadwal & Tujuan
                </h6>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="StartDate" class="form-label fw-medium">
                                <i class="bi bi-calendar-plus text-muted me-1"></i>Tanggal & Waktu Mulai <span class="text-danger">*</span>
                            </label>
                            <input asp-for="StartDate" class="form-control form-control-modern" type="datetime-local" />
                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="EndDate" class="form-label fw-medium">
                                <i class="bi bi-calendar-x text-muted me-1"></i>Tanggal & Waktu Selesai <span class="text-danger">*</span>
                            </label>
                            <input asp-for="EndDate" class="form-control form-control-modern" type="datetime-local" />
                            <span asp-validation-for="EndDate" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
                
                <div class="form-group mb-4">
                    <label asp-for="Destination" class="form-label fw-medium">
                        <i class="bi bi-geo-alt text-muted me-1"></i>Tujuan / Lokasi <span class="text-danger">*</span>
                    </label>
                    <div class="input-group">
                        <select class="form-select form-select-modern" id="destinationSelect" onchange="handleDestinationChange()">
                            <option value="">-- Pilih Lokasi --</option>
                            <option value="Kantor Pusat Jakarta">Kantor Pusat Jakarta</option>
                            <option value="Kantor Cabang Surabaya">Kantor Cabang Surabaya</option>
                            <option value="Site Tambang Weda Bay">Site Tambang Weda Bay</option>
                            <option value="Site Tambang Pomalaa">Site Tambang Pomalaa</option>
                            <option value="Site Tambang Kolaka">Site Tambang Kolaka</option>
                            <option value="Site Tambang Morowali">Site Tambang Morowali</option>
                            <option value="Site Tambang Obi Island">Site Tambang Obi Island</option>
                            <option value="Site Tambang Gee">Site Tambang Gee</option>
                            <option value="Lainnya">Lokasi Lainnya</option>
                        </select>
                        <input asp-for="Destination" class="form-control form-control-modern d-none" placeholder="Masukkan tujuan/lokasi" />
                    </div>
                    <span asp-validation-for="Destination" class="text-danger small"></span>
                </div>
                
                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-secondary" onclick="previousStep(2)">
                        <i class="bi bi-arrow-left me-1"></i>Sebelumnya
                    </button>
                    <button type="button" class="btn btn-primary" onclick="nextStep(4)">
                        Selanjutnya <i class="bi bi-arrow-right ms-1"></i>
                    </button>
                </div>
            </div>
            
            <!-- Step 4: Approval -->
            <div class="form-step" id="step4">
                <h6 class="text-primary mb-3">
                    <i class="bi bi-person-check me-2"></i>Persetujuan
                </h6>
                
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Catatan:</strong> Reservasi memerlukan persetujuan dari minimal 2 pihak yang berwenang. Pilih penyetuju sesuai dengan kebijakan perusahaan.
                </div>            <!-- Step 4: Approval -->
            <div class="form-step" id="step4">
                <h6 class="text-primary mb-3">
                    <i class="bi bi-person-check me-2"></i>Persetujuan
                </h6>
                
                <div class="alert alert-info border-info bg-info bg-opacity-10">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-info-circle me-2 text-info fs-5"></i>
                        <div>
                            <strong>Persetujuan Diperlukan</strong>
                            <p class="mb-0">Reservasi memerlukan persetujuan dari <strong>minimal 2 pihak</strong> yang berwenang. Pilih penyetuju sesuai dengan kebijakan perusahaan untuk mempercepat proses persetujuan.</p>
                        </div>
                    </div>
                </div>
                
                <div class="form-group mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <label class="form-label fw-medium mb-0">
                            <i class="bi bi-people-fill text-muted me-1"></i>Pilih Penyetuju <span class="text-danger">*</span>
                        </label>
                        <div class="approver-progress">
                            <div class="progress" style="width: 150px; height: 8px;">
                                <div class="progress-bar bg-danger" role="progressbar" style="width: 0%" id="approverProgressBar"></div>
                            </div>
                            <small class="text-muted mt-1 d-block text-center">
                                <span id="approversSelectedCount">0</span> / 2 minimum
                            </small>
                        </div>
                    </div>                <!-- Enhanced Approvers Selection -->
                <div class="form-group mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <label class="form-label fw-medium mb-0">
                            <i class="bi bi-people-fill text-muted me-2"></i>Pilih Penyetuju <span class="text-danger">*</span>
                        </label>
                        <div class="approver-progress-info">
                            <div class="d-flex align-items-center gap-3">
                                <div class="progress" style="width: 120px; height: 8px;">
                                    <div class="progress-bar bg-danger" role="progressbar" style="width: 0%" id="approverProgressBar"></div>
                                </div>
                                <div class="text-center">
                                    <small class="text-muted fw-medium">
                                        <span id="approversSelectedCount" class="text-primary fw-bold">0</span> / <span class="text-success fw-bold">2</span> minimum
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Approvers Grid -->
                    <div class="approvers-container">
                        <div class="row g-3">
                            @if (Model.Approvers != null && Model.Approvers.Any())
                            {
                                @foreach (var approver in Model.Approvers)
                                {
                                    if (!string.IsNullOrEmpty(approver.Value))
                                    {
                                        <div class="col-md-6">
                                            <div class="approver-card" id="approverCard_@approver.Value">
                                                <input class="form-check-input approver-checkbox d-none" type="checkbox" name="ApproverIds" value="@approver.Value" id="approver_@approver.Value">
                                                <label class="form-check-label w-100 cursor-pointer" for="approver_@approver.Value">
                                                    <div class="d-flex align-items-center">
                                                        <div class="approver-avatar me-3">
                                                            <i class="bi bi-person-badge text-primary fs-3"></i>
                                                        </div>
                                                        <div class="flex-grow-1">
                                                            <h6 class="mb-1 text-dark fw-bold">@approver.Text</h6>
                                                            <small class="text-muted">Klik untuk memilih sebagai penyetuju</small>
                                                            <div class="mt-2">
                                                                <span class="badge bg-primary bg-opacity-10 text-primary">
                                                                    <i class="bi bi-shield-check me-1"></i>Atasan Berwenang
                                                                </span>
                                                            </div>
                                                        </div>
                                                        <div class="check-indicator d-none">
                                                            <div class="check-circle">
                                                                <i class="bi bi-check-circle-fill text-success fs-4"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </label>
                                            </div>
                                        </div>
                                    }
                                }
                            }
                            else
                            {
                                <div class="col-12">
                                    <div class="alert alert-warning border-warning">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-exclamation-triangle me-3 text-warning fs-4"></i>
                                            <div>
                                                <h6 class="mb-1 fw-bold">Tidak Ada Penyetuju Tersedia</h6>
                                                <p class="mb-0">Saat ini tidak ada penyetuju yang tersedia dalam sistem. Silakan hubungi administrator untuk menambahkan penyetuju.</p>
                                                <div class="mt-2">
                                                    <small class="text-muted">
                                                        <i class="bi bi-telephone me-1"></i>Hubungi: admin@nikelnusantara.co.id
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <!-- Feedback Section -->
                    <div class="approver-feedback-section mt-4">
                        <div class="selected-approvers-info p-3 rounded" id="approverFeedback">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-exclamation-triangle text-warning me-3 fs-5" id="approverIcon"></i>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 fw-medium" id="approverMessage">
                                        Pilih minimal 2 penyetuju untuk melanjutkan
                                    </h6>
                                    <div class="selected-approvers-list mt-2" id="selectedApproversList" style="display: none;">
                                        <small class="text-muted">
                                            <i class="bi bi-people me-1"></i>Penyetuju yang dipilih: 
                                            <span id="approverNames" class="fw-medium text-primary"></span>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <span asp-validation-for="ApproverIds" class="text-danger small d-none" id="approverError"></span>
                </div>
                
                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-secondary" onclick="previousStep(3)">
                        <i class="bi bi-arrow-left me-1"></i>Sebelumnya
                    </button>
                    <button type="submit" class="btn btn-success btn-lg px-4" id="submitBtn">
                        <i class="bi bi-check-circle me-1"></i>Buat Reservasi
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Global variables
        let currentStep = 1;
        
        // Handle purpose selection change
        function handlePurposeChange() {
            const purposeSelect = document.getElementById('Purpose');
            const customPurposeDiv = document.getElementById('customPurposeDiv');
            
            if (purposeSelect && customPurposeDiv) {
                if (purposeSelect.value === 'Lainnya') {
                    customPurposeDiv.style.display = 'block';
                    const customInput = document.getElementById('customPurpose');
                    if (customInput) customInput.required = true;
                } else {
                    customPurposeDiv.style.display = 'none';
                    const customInput = document.getElementById('customPurpose');
                    if (customInput) {
                        customInput.required = false;
                        customInput.value = '';
                    }
                }
            }        }

        // Document ready
        $(document).ready(function() {
            // Set minimum date to today and clear any invalid initial values
            const now = new Date();
            const minDateTime = now.toISOString().slice(0, 16);
            
            // Clear any invalid initial values before setting constraints
            const startDateInput = $("#StartDate");
            const endDateInput = $("#EndDate");
            
            // Check if current values are before minimum and clear them if so
            if (startDateInput.val() && new Date(startDateInput.val()) < now) {
                startDateInput.val('');
            }
            if (endDateInput.val() && new Date(endDateInput.val()) < now) {
                endDateInput.val('');
            }
            
            startDateInput.attr('min', minDateTime);
            endDateInput.attr('min', minDateTime);

            // Auto-calculate end date when start date changes
            $("#StartDate").change(function() {
                const startDate = new Date($(this).val());
                if (startDate) {
                    const endDate = new Date(startDate);
                    endDate.setHours(endDate.getHours() + 4); // Default 4 hours duration
                    
                    const year = endDate.getFullYear();
                    const month = (endDate.getMonth() + 1).toString().padStart(2, '0');
                    const day = endDate.getDate().toString().padStart(2, '0');
                    const hours = endDate.getHours().toString().padStart(2, '0');
                    const minutes = endDate.getMinutes().toString().padStart(2, '0');
                    
                    $("#EndDate").val(`${year}-${month}-${day}T${hours}:${minutes}`);
                    $("#EndDate").attr('min', $(this).val());
                    
                    // Clear validation error if exists
                    $("#StartDate").removeClass('is-invalid');
                    $("#EndDate").removeClass('is-invalid');
                }
            });
            
            // Initialize approver counter
            updateApproverCount();
            
            // Listen for approver checkbox changes with animation
            $(document).on('change', '.approver-checkbox', function() {
                updateApproverCount();
                
                // Add visual feedback
                const card = $(this).closest('.approver-card');
                if ($(this).is(':checked')) {
                    card.addClass('border-success bg-success bg-opacity-10').removeClass('bg-light');
                } else {
                    card.removeClass('border-success bg-success bg-opacity-10').addClass('bg-light');
                }
            });
            
            // Real-time validation for all form fields
            $('input, select').on('change blur', function() {
                const field = $(this);
                const fieldId = field.attr('id');
                
                // Remove validation error when user starts typing/selecting
                if (field.val()) {
                    field.removeClass('is-invalid');
