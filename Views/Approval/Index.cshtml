@model IEnumerable<VehicleReservationSystem.Models.Approval>

@{
    ViewData["Title"] = "Pending Approvals";
}

<h1>Pending Approvals</h1>

<div class="card">
    <div class="card-header">
        <h5>Approval Requests</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Requester</th>
                            <th>Vehicle</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Purpose</th>
                            <th>Approval Level</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Reservation.Id</td>
                                <td>@item.Reservation.Requester.FullName</td>
                                <td>@item.Reservation.Vehicle.Brand @item.Reservation.Vehicle.Model (@item.Reservation.Vehicle.RegistrationNumber)</td>
                                <td>@item.Reservation.StartDate.ToString("dd MMM yyyy HH:mm")</td>
                                <td>@item.Reservation.EndDate.ToString("dd MMM yyyy HH:mm")</td>
                                <td>@item.Reservation.Purpose</td>
                                <td>Level @item.Level</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Review</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                You have no pending approval requests.
            </div>
        }
    </div>
</div>